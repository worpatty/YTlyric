/* myp01 */
.fantube-setting-container{
    height:100vh;
    background-color: #56C5DE;
}
.fantube-setting-container a{
    text-decoration: none;
}
.fantube-setting__row{
    padding:20px;
    background-color: #fff;
    font-size:4vw;
    color:#606060;
    border-bottom:solid 2px #dfdfdf;
}
.fantube-modal__bg{
    display:none;
    position:absolute;
    top:0;
    left:0;
    width:100vw;
    height:100vh;
    background-color: rgba(0,0,0,0.5);
    z-index: 10;
}
.fantube-modal__modal{
    margin-top:calc(50vh - 100px);
    margin-left:auto;
    margin-right:auto;
    width:calc(100% - 100px);
    height:200px;
    background-color: #fff;
    text-align: center;
}
.fantube-modal__header{
    height:40px;
}
.fantube-modal__message{
    height:100px;
    padding:30px 15px 0 15px;
    font-size:16px;
    color:#333;
    text-align: center;
}
.fantube-modal__footer{
    height:60px;
    text-align: center;
}
.fantube-modal__dismiss{
    display: inline-block;
    float:right;
    width:40px;
    height:40px;
    background-image: url(../img/modal_close@2x.png);
    background-position: 50% 50%;
    background-repeat:no-repeat;
    background-size: 12px;
}
.fantube-modal__button.close{
    display:inline-block;
    padding:10px 20px;
    color:#fff;
    background-color: #969696;
    font-size:12px;
}

/* req01 */
.fantube-request-logo{
    width:100%;
    height:200px;
    padding-top: 70px;
    line-height: 32px;
    text-align: center;
    font-size:18px;
    font-weight: bold;
    color:#fff;
    background-image: url(../img/pic_concert.png);
    background-repeat:no-repeat;
    background-size:cover;
}
.fantube-request__label{
    padding-left:20px;
    height:45px;
    background-color: #fff;
    line-height:45px;
    font-size:14px;
    font-weight: bold;
    color:#333;
    border-bottom:solid 1px #dadada;
}
.fantube-request__input{
    padding-left:20px;
    width:100%;
    height:45px;
    line-height:45px;
    border:none;
    border-bottom:solid 1px #dadada;
    font-size:12px;
    color:#333;
}
.fantube-request__submit-btn{
    position:fixed;
    left:0;
    bottom:0;
    width:100%;
    height:45px;
    line-height:45px;
    text-align: center;
    font-size:18px;
    font-weight: bold;
    color:#fff;
    border:none;
    background-color: #d6d6d6;
}
.fantube-request__submit-btn.active{
    background-color: #303030;
}

/* footer */
.fantube-footer{
    position:fixed;
    left:0;
    bottom:0;
    width:100%;
    height:48px;
    background-color: rgba(255, 255, 255, 0.95);
}
.fantube-footer__default-col{
    width:calc(100% / 3);
    float:left;
    height:48px;
    background-position: 50% 50%;
    background-repeat:no-repeat;
}
.fantube-footer__default-col.main-feed{
    background-image:url(../img/tab_feed@2x.png);
    background-size: 40px;
}
.fantube-footer__default-col.search{
    background-image:url(../img/tab_search@2x.png);
    background-size: 40px;
}
.fantube-footer__default-col.setting{
    background-image:url(../img/tab_option@2x.png);
    background-size: 40px;
}
.fantube-footer__default-col > a{
    display:inline-block;
    width:100%;
    height:48px;
}

.fantube-footer.player{
    height:45px;
    background-color: #f3f3f3;
    border-top:solid 1px #dbdbdb;
}
.fantube-footer__subtitle-list{
    display:none;
    position:absolute;
    left:0;
    bottom:45px;
    width:20vw;
    min-width:100px;
    background-color: #f3f3f3;
    border-right:solid 1px #dbdbdb;
    overflow:hidden;
}
.fantube-footer__subtitle-list__row{
    height:40px;
    line-height:40px;
    border-top:solid 1px #dbdbdb;
    text-align: center;
}
.fantube-footer__player-col{
    display:inline-block;
    float:left;
    width:20%;
    height:45px;
    line-height:45px;
    font-size:13px;
    text-align: center;
    background-size:auto;
    background-position:50%;
    background-repeat:no-repeat;
}
.fantube-footer__player-col.prev-btn{
    background-image:url('../img/prev@2x.png');
    background-size: 40px;
}
.fantube-footer__player-col.play-btn{
    background-image:url('../img/play@2x.png');
    background-size: 40px;
}
.fantube-footer__player-col.play-btn.pause-btn{
    background-image:url('../img/pause@2x.png');
    background-size: 40px;
}
.fantube-footer__player-col.next-btn{
    background-image:url('../img/next@2x.png');
    background-size: 40px;
}
.fantube-footer__player-col.repeat-btn{
    background-image:url('../img/play_repeat_all_off@2x.png');
    background-size: 31px 20px;
}
.fantube-footer__player-col.repeat-btn.active{
    background-image:url('../img/play_repeat_all_on@2x.png');
    background-size: 31px 20px;
}
.fantube-header__btn-back{
    width: 24px;
    height: 24px;
}
