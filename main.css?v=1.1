/* common */
*{
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
body{
    margin:0;
    padding:0;
}

.no-text-select{
    user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    -webkit-user-select: none;
}

/* FED-01 */
.list--movie-box{
    width:100%;
    height:100vh;
    padding-bottom:45px;
    overflow-x:hidden;
    overflow-y:auto;
    background-color: #dfdfdf;
    -webkit-overflow-scrolling: touch;
}
.movie-box{
    margin-bottom:2vw;
    padding:2vw;
    background-color: #fff;
    overflow:hidden;
}
.movie-box__profile{
    overflow:hidden;
}
.movie-box__col{
    display:inline-block;
    float:left;
    height:10vw;
}
.movie-box__col.col-artist{
    width:10vw;
}
.movie-box__col.col-mov-info{
    width:86vw;
    padding-left:2vw;
}
.movie-box__artist-pic{
    width:10vw;
    height:10vw;
}
.movie-box__artist-name{
    line-height:5vw;
    font-size:3.7vw;
    font-weight:bold;
}
.movie-box__artist-desc,
.movie-box__movie-time{
    font-size:2.8vw;
    line-height:5vw;
    color:#a8a8a8;
}
.movie-box__description{
    margin-top:3vw;
    font-size:4vw;
}
.movie-box__tag{
    padding:1vw;
    font-size:3vw;
    font-weight:bold;
}
.movie-box__tag a{
    text-decoration: none;
}
.movie-box__tag span{
    margin-right:3vw;
    color: #7f7f7f;
}
.movie-box__thumbnail{
    display:block;
    position:relative;
    margin-top:1vw;
    width:96vw;
    height:48vw;
    overflow: hidden;
}
.movie-box__thumbnail-pic{
    width:100%;
}
.movie-box__thumbnail-pic.youtube{
    position: absolute;
    left: -100%;
    right: -100%;
    top: -100%;
    bottom: -100%;
    margin: auto;
    width:100%;
    height: auto;
}
.movie-box__title{
    height:8.5vw;
    line-height:8.5vw;
    font-size:4vw;
    font-weight: bold;
}
.loading--movie-list{
    display:none;
    width:100%;
    height:50px;
    background-image: url(../img/ajax-loader.gif);
    background-position: 50% 50%;
    background-size:contain;
    background-repeat:no-repeat;
}

/* VOD-01 */
.fantube-greeting-box{
    display:table;
    width:100%;
    /* heightëŠ” jsë¡œ ê³„ì‚° */
    text-align: center;
    background-color: #dfdfdf;
}
.fantube-greeting-box__middle-box{
    display:table-cell;
    width:100%;
    vertical-align: middle;
}
.fantube-footer--logo{
    width:100%;
    height:65px;
    background: #dfdfdf;
    text-align: center;
    background-image: url(../img/logo@2x.png);
    background-repeat:no-repeat;
    background-position: 50% 50%;
    background-size: 87px 32px;
}
/* VOD-02 */
.fantube-header{
    padding:10px;
    width:100%;
    height:45px;
    line-height:25px;
    background-color: #fff;
    color:#000;
    font-size:4vw;
    border-bottom:solid 1px #bcbcbc;
}
.fantube-header > a{
    width:24px;
    vertical-align: top;
}
.fantube-header > span{
    display: inline-block;
    width:calc(100% - 30px);
    vertical-align: top;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.fantube-player{
    width:100%;
    height:57vw;
}
.fantube-movie-tag{
    width:100%;
    height:45px;
    line-height:45px;
    border-bottom:solid 1px #dfdfdf;
}
.fantube-movie-tag__link{
    padding-left:10px;
    font-size:12px;
    font-weight: bold;
    color:#000;
    text-decoration: none;
}
.fantube-movie-subtitle-box{
    padding-bottom:50px;
    width:100%;
    height:calc(100vh - 57vw - 90px); /* ì „ì²´ ë†’ì´ - Player ë†’ì´ - ìƒ/í•˜ë‹¨ ë©”ë‰´(45, 45) */
    min-height:300px;
    background-color: #fff;
    overflow-x:hidden;
    overflow-y:auto;
    -webkit-overflow-scrolling: touch;
}
.fantube-movie__subtitle{
    display:table;
    width:100%;
    padding:3px 0;
    background-color: #fff;
    border-bottom:solid 1px #f5f5f5;
}
.fantube-movie__subtitle-row{
    display:table-row;
    width:100%;
    height:50px;
}
.fantube-movie__subtitle-time{
    display:table-cell;
    width:10%;
    height:50px;
    text-align: center;
    color:#a1a1a1;
    font-size:9px;
    vertical-align: middle;
}
.fantube-movie__subtitle-contents{
    display:table-cell;
    width:80%;
    min-height:50px;
    padding-left:20px;
    font-size:15px;
    line-height:22px;
    color:#BFBFBF;
    vertical-align: middle;
}
.fantube-movie__subtitle-main{
    font-weight:bold;
}
.fantube-movie__subtitle-repeat-box{
    display:table-cell;
    width:10%;
    vertical-align: middle;
    text-align: center;
}
.fantube-movie__subtitle-repeat-btn{
    display:inline-block;
    width:25px;
    height:24px;
    background-image:url('../img/ic_refresh@2x.png');
    background-repeat:no-repeat;
    background-size:cover;
}
.fantube-movie__subtitle-repeat-btn.active{
    background-image:url('../img/ic_refresh_select@2x.png');
}
.fantube-movie__subtitle.active{
    background-color: #DCF6FC;
}
.fantube-movie__subtitle.active .fantube-movie__subtitle-contents{
    color:#000;
}
.fantube-movie__loading-bg{
    position:fixed;
    left:0;
    bottom:0;
    width:100%;
    height:calc(100vh - 45px);
    background: rgba(0,0,0,0.5) url('../img/ajax-loader2.gif') 50% 50%;
    background-repeat: no-repeat;
}

/* src01 */
.fantube-header--form{
    margin-bottom:0;
    background-color: #fff;
    overflow:hidden;
    border-bottom:solid 1px #bcbcbc;
}
.fantube-header__search{
    float:left;
    padding:10px;
    width:calc(100% - 45px);
    height:45px;
    border: none;
    font-size:14px;
}
.fantube-header__search-icon{
    float:left;
    width:45px;
    height:45px;
    background-image: url(../img/tab_search@2x.png);
    background-repeat: no-repeat;
    background-color: #fff;
    background-position:50% 50%;
    background-size: 40px;
    border: none;
    opacity:0.6;
}

.featured-carousel-box{
    position:relative;
}
.featured-carousel{
    width:100%;
    height:200px;
}
.featured-carousel__img, .featured-carousel__img img{
    width:100%;
    height:200px;
}
.featured-carousel__info{
    position:absolute;
    left:0;
    bottom:0;
    width:100%;
    height:70px;
    background-color: rgba(0,0,0, 0.5);
}
.featured-carousel__description{
    height:40px;
    line-height:40px;
    font-size:16px;
    font-weight: bold;
    color:#fff;
    text-align: center;
}
.featured-carousel__dots{
    text-align: center;
}
.featured-carousel__dot{
    display:inline-block;
    width:15px;
    height:30px;
    background-image: url(../img/carousel_off@2x.png);
    background-position: 50% 50%;
    background-repeat:no-repeat;
    background-size: 9px;
}
.featured-carousel__dot.active{
    background-image: url(../img/carousel_on@2x.png);
}

.featured-movie-list{
    height: calc(100vh - 246px);
    padding-bottom: 45px;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}
.featured-movie-box{
    padding:10px;
    border-bottom:solid 1px #dbdbdb;
    overflow:auto;
}
.featured-movie-photo, .featured-movie-photo img{
    width:134px;
    height:74px;
}
.featured-movie-photo{
    float:left;
}
.featured-movie-info-box{
    width:calc(100% - 154px);
    padding-left:10px;
    float:left;
    min-height:74px;
}
.featured-movie-title{
    font-size:16px;
    font-weight: bold;
}
.featured-movie-title a {
    text-decoration: none;
    color:#000;
}
.featured-movie-artist-and-time{
    line-height:20px;
    font-size:10px;
    color:#a1a1a1;
}
.featured-movie-tags{
    line-height:20px;
    font-size:11px;
    font-weight:bold;
}

/* src02 */
.fantube-search__title--small{
    height:30px;
    line-height:30px;
    padding: 0 10px;
    background-color: #dfdfdf;
    font-size:15px;
    color:#303030;
}
.fantube-search__tag-box{
    padding:10px;
    width:100%;
    min-height:45px;
    background-color: #fff;
}
.fantube-search__tag-box a{
    margin-right:10px;
    text-decoration: none;
    color:#000;
    font-size:14px;
    font-weight: bold;
    line-height:20px;
}
.fantube-search__mov-list{
    padding-bottom: 45px;
    height: calc(100vh - 151px);
    overflow-y: auto;
}

.fantube-search__no-result-container{
    display:table;
    width:100%;
    height:calc(100vh - 94px);
    background-color: #f5f5f5;
}
.fantube-search__no-result-middle-box{
    display:table-cell;
    width:100%;
    text-align: center;
    vertical-align: middle;
}
.fantube-search__no-result-image{

}
.fantube-search__no-result-text{
    margin:25px 0;
    font-size:15px;
}

